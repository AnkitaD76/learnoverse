                            {
                                "key": "Authorization",
                                "value": "Bearer {{ACCESS_TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/auth/revoke-all-sessions",
                            "host": ["{{BASE_URL}}"],
                            "path": ["auth", "revoke-all-sessions"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Dashboards",
            "item": [
                {
                    "name": "Student Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{ACCESS_TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/users/student/dashboard",
                            "host": ["{{BASE_URL}}"],
                            "path": ["users", "student", "dashboard"]
                        }
                    }
                },
                {
                    "name": "Instructor Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{ACCESS_TOKEN}}"
                            }
                        ],
                        "url": {
                            "raw": "{{BASE_URL}}/users/instructor/dashboard",
                            "host": ["{{BASE_URL}}"],
